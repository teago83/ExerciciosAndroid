<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="431dp"
        android:layout_height="763dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_android" />

    <ImageView
        android:layout_width="144dp"
        android:layout_height="74dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/weapon_damage_converter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="233dp"
        android:layout_height="110dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/mh_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/true_to_fake"
        android:layout_width="343dp"
        android:layout_height="41dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/black"
        android:src="@drawable/true_to_fake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageButton
        android:id="@+id/fake_to_true"
        android:layout_width="343dp"
        android:layout_height="41dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/black"
        android:src="@drawable/fake_to_true"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>